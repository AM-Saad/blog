<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./includes/head.ejs') %>

        <meta name="description" content="<%=article.site_description%>">
        <meta name="keywords" content="<%= article.tags %>">
        <!-- Theme included stylesheets -->
        <meta name="twitter:title" content="<%=article.title%>">
        <meta name="twitter:description" content="<%=article.site_description%>">
        <meta name="twitter:image" content="<%=article.image%>">
        <meta name="twitter:card" content="summary_large_image">
        <link rel="canonical" href="https://www.abdelrahman-saad.cc/article/<%=article.slug%>" />

        <meta property="og:site_name" content="Abdelrahman Saad">
        <meta name="twitter:image:alt" content="<%=article.title%>">

        <meta property="og:title" content="<%=article.title%>">
        <meta property="og:type" content="website" />
        <meta property="og:image" content="https://www.abdelrahman-saad.cc/<%=article.image%>">
        <meta property="og:description" content="<%=article.site_description%>" />
        <meta property="og:url" content="https://www.abdelrahman-saad.cc/article/<%=article.slug%>">

        <link data-ams-reload="true" rel="stylesheet" href="/css/quill.css">
        <link data-ams-reload="true" rel="stylesheet" href="/css/article.css">
        <link data-ams-reload="true" href="//cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
        <link data-ams-reload="true" href="//cdn.quilljs.com/1.3.6/quill.bubble.css" rel="stylesheet">
        <link data-ams-reload="true" rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/9.18.1/styles/monokai-sublime.min.css">

</head>

<body>
    <div class="wrapper" id="main" data-inanimation="slide-left" data-outanimation="fade">
        <%- include('./includes/nav.ejs') %>
            <%- include('./includes/search.ejs') %>
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <input type="hidden" id="articleId" value="<%= article._id %>">

                <%- include('./includes/topics.ejs') %>
                    <header>
                        <h1>
                            <%=article.title%>
                        </h1>
                        <h2>
                            <%=article.date%>
                        </h2>
                        <img src="/<%=article.image%>" alt="<%=article.title%>" width="100" height="auto">
                    </header>
                    <section>
                        <aside class="flex f-space-between">
                            <ul id="reacts">
                                <li class="react" data-react="highfive">

                                    <div class="before"></div>
                                    <div class="after"></div>
                                    <img src="/images/clapp.png" alt />
                                    <span>
                                        <%= article.reactions.highfive.counter %>
                                    </span>
                                </li>
                                <li class="react" data-react="like">


                                    <div class="before"></div>
                                    <div class="after"></div>
                                    <img src="/images/love.png" alt />
                                    <span>
                                        <%= article.reactions.like.counter %>
                                    </span>
                                </li>
                                <li class="react" data-react="dislike">

                                    <div class="before"></div>
                                    <div class="after"></div>
                                    <img src="/images/dislike.png" alt />
                                    <span>
                                        <%= article.reactions.dislike.counter %>
                                    </span>
                                </li>
                            </ul>
                            <ul class="flex">
                                <li>
                                    <a href="https://www.facebook.com/sharer/sharer.php?u=https://abdelrahman-saad.cc/article/<%=article.slug%>" target="_blank">
                                        <img src="/images/facebook.svg" alt="share_icon" />
                                    </a>
                                </li>
                                <li>
                                        <a href="javascript:void(0)" onclick="window.open( 'http://www.linkedin.com/shareArticle?mini=true&url=https://abdelrahman-saad.css/article/<%=article.slug%>', 'sharer', 'toolbar=0, status=0, width=626, height=436');return false;" title="Linkedin">   <img src="/images/linkedin.svg" alt="share_icon" /></a>

                                     
                                    </a>
                                </li>
                                <li>
                                    <a href="https://www.twitter.com/share?url=https://abdelrahman-saad.cc/article/<%=article.slug%>" target="_blank">
                                        <img src="/images/twitter.svg" alt="share_icon" />
                                    </a>
                                </li>
                            </ul>
                        </aside>
                        <article class="editor ql-container ql-snow">
                            <p id="content" class="ql-editor">
                                <%=article.content%>
                            </p>
                        </article>
                    </section>

                    <div class="more-article">

                        <%if(similar.length > 0){%>
                            <h6 class="more-article_title">Read More...</h6>
                            <section id="articles" class="grid g-three">
                                <% for(article of similar){ %>
                                    <%- include('./includes/article-box.ejs' , {article: article}) %>
                                        <%}%>
                            </section>
                            <%}else{%>
                                <%- include('./includes/topics.ejs') %>

                                    <%}%>
                    </div>
    </div>

    <!-- <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/11.1.0/styles/default.min.css"> -->
    <!-- <script src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/11.1.0/highlight.min.js"></script> -->

    <%- include('./includes/scripts.ejs') %>
        <script data-ams-reload="true" src="/js/reactions.js"></script>
        <script data-ams-reload="true" src="/js/update-article.js"></script>
        <script data-ams-reload="true" src="//cdn.quilljs.com/1.3.6/quill.js"></script>
        <script data-ams-reload="true" src="//cdn.quilljs.com/1.3.6/quill.min.js"></script>

</body>

</html>