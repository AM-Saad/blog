<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./includes/head.ejs') %>

        <meta name="description" content="<%=article.site_description%>">
        <meta name="keywords" content="<%= article.tags %>">
        <!-- Theme included stylesheets -->
        <link data-ams-reload="true" rel="stylesheet" href="/css/quill.css">
        <link data-ams-reload="true" rel="stylesheet" href="/css/article.css">
        <link data-ams-reload="true" href="//cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
        <link data-ams-reload="true" href="//cdn.quilljs.com/1.3.6/quill.bubble.css" rel="stylesheet">
        <link data-ams-reload="true" rel="stylesheet"
            href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/9.18.1/styles/monokai-sublime.min.css">

</head>

<body>
    <div class="wrapper" id="main" data-inanimation="slide-left" data-outanimation="fade">
        <%- include('./includes/nav.ejs') %>
            <%- include('./includes/search.ejs') %>

                <%- include('./includes/topics.ejs') %>
                    <header>
                        <h1>
                            <%=article.title%>
                        </h1>
                        <h2 class="m-b-3">
                            <%=article.date%>
                        </h2>
                        <img src="/<%=article.image%>" alt="<%=article.title%>" width="100" height="auto">
                    </header>

                    <article class="editor ql-container ql-snow">
                        <p id="content" class="ql-editor">
                            <%=article.content%>
                        </p>
                    </article>

    </div>

    <!-- <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/11.1.0/styles/default.min.css"> -->
    <!-- <script src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/11.1.0/highlight.min.js"></script> -->

    <%- include('./includes/scripts.ejs') %>
        <script data-ams-reload="true" src="/js/update-article.js"></script>
        <script data-ams-reload="true" src="//cdn.quilljs.com/1.3.6/quill.js"></script>
        <script data-ams-reload="true" src="//cdn.quilljs.com/1.3.6/quill.min.js"></script>

</body>

</html>