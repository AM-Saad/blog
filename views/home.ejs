<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./includes/head.ejs') %>

</head>

<body onload="getBookmark()" data-mode="light">

    <div class="wrapper" id="main" data-inanimation="slide-left" data-outanimation="fade">
        <%- include('./includes/nav.ejs') %>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <%- include('./includes/search.ejs') %>

            <header>
                <!-- <h2 id="date">24 May 2021</h2> -->
                <div class="header-upper">
                    <img src="/images/1.jpg" alt="">
                    <div>
                        <h3>Hi, i'm Abdelrahman</h3>
                        <h4>Full-Stack Developer</h4>
                    </div>
                </div>
                <div class="header-bottom">
                    <div></div>
                    <h1>Passionate about tech! Yes, But also have a strong background in marketing and graphic
                        design,<br> does it matters!!</h1>

                </div>
            </header>
            <%- include('./includes/topics.ejs') %>
                <section id="articles" class="grid g-three">
                    <% for(article of articles){ %>
                        <article class="lazy-background hidden" data-src="/<%=article.image %>"  data-id="<%=article._id%>">
                            <input type="hidden" name="articleId" value="<%= article._id %>">

                            <span class="add-bookmark">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="#fff" viewBox="0 0 16 16" width="64px"
                                    height="64px">
                                    <path fill="none" stroke="#fff" stroke-miterlimit="10"
                                        d="M11.5,2.5h-7c-0.552,0-1,0.448-1,1v10L8,10.2l4.5,3.3v-10C12.5,2.948,12.052,2.5,11.5,2.5z" />
                                </svg>
                            </span>
                            <a href="/article/<%=article.title%>">
                                <div class="article-body">
                                    <div class="blurrer"></div>

                                    <h3>
                                        <%=article.title%>
                                    </h3>
                                    <p>
                                        <%= article.date %>
                                    </p>
                                </div>
                            </a>
                        </article>
                        <%}%>
                </section>
    </div>

    <%- include('./includes/scripts.ejs') %>
        <!-- <script>
            let newd = new Date()
            let date = { date: newd.toDateString(), time: newd.getHours() + ':' + newd.getMinutes() }
            document.getElementById('date').innerHTML = date.date
        </script> -->

</body>

</html>